PLayGame
package com.game.admin.myapplication;

/**
 * Created by admin on 11/22/2017.
 */

public class PLayGame {

    String name,url,type;
    int img;

    public PLayGame() {
    }

    public PLayGame(String name, String url, String type, int img) {
        this.name = name;
        this.url = url;
        this.type = type;
        this.img = img;
    }

    public String getName() {
        return name;
    }

    public void setName(String name) {
        this.name = name;
    }

    public String getUrl() {
        return url;
    }

    public void setUrl(String url) {
        this.url = url;
    }

    public String getType() {
        return type;
    }

    public void setType(String type) {
        this.type = type;
    }

    public int getImg() {
        return img;
    }

    public void setImg(int img) {
        this.img = img;
    }
}
